<% include ../partials/header %>

 <div class="container" >
  <div class="row">
   <h1 style="text-align:center ">Create a New Event</h1>
   <div style= "width:30%; margin: 30px auto;">
    <form action = "/campgrounds" method= "POST">
     <div class="form-group">
       <input class = "form-control" type = "text" name="name" placeholder = "Event Name">
     </div>
     <div class="form-group">
       <input class= "form-control" type = "text" name="price" placeholder = "Price" >
     </div>
     <div class="form-group">
       <input class= "form-control" type = "text" name="image" placeholder = "Event Image">
     </div>
     <div class="form-group" >
       <input class= "form-control" type = "text" name="description" placeholder = "Event Description" >
     </div>
     <div class="form-group" >
       <button class="btn btn-ld btn-primary btn-block">Submit!</button>
     </div>
    </form>
     <a href="/campgrounds">Go Back</a>
   </div>
   
  
  </div>
 </div>

 
 <% include ../partials/footer %>